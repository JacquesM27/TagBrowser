@using StackoverflowTagBrowser.ViewModels;
@model NotOkViewModel
@{
    ViewData["Title"] = "Error";
}

<div class="row">
    <div class="col-md-6 offset-3">
        <div class="alert alert-danger" role="alert">
            <h4 class="alert-heading text-center">@Model.StatusCode!</h4>
            <hr />
            <p class="text-center">@Model.Description</p>
        </div>
        <hr />
        
        <div class="mt-2rem">
            <a class="btn" asp-controller="Home" asp-action="Index">Return</a>
        </div>
    </div>
</div>