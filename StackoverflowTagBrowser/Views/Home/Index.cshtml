@using StackoverflowTagBrowser.ViewModels;
@model TagViewModel
@{
    ViewData["Title"] = "Home Page";
}
<div class="container">
    <h1 class="text-center">Tag Browser - Jakub Michalak</h1>
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <table class="table">
                <thead>
                    <tr>
                        <th >@Html.DisplayNameFor(model => model.Tags.First().name)</th>
                        <th>@Html.DisplayNameFor(model => model.Tags.First().count)</th>
                        <th>@Html.DisplayNameFor(model => model.TotalCount)</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var tag in Model.Tags)
                    {
                        <tr>
                            <td>@tag.name</td>
                            <td>@tag.count</td>
                            <td>@(((float)tag.count / Model.TotalCount * 100).ToString("F2"))%</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>    